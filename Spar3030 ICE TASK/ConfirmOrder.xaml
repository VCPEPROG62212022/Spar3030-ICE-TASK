        <TextBox x:Name="txtNameConfirm" HorizontalAlignment="Left" Margin="553,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120"/>
        <TextBox x:Name="txtAddress" HorizontalAlignment="Left" Margin="553,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtCell" HorizontalAlignment="Left" Margin="553,225,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnConfirm" Content="Confirm Order" HorizontalAlignment="Left" Margin="474,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="187"/>
