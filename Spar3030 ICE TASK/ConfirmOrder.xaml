      xmlns:local="clr-namespace:Spar3030_ICE_TASK"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConfirmOrder">

    <Grid>
        <Grid.RowDefinitions>
