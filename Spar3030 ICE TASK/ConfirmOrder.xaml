            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Label x:Name="lblConfirmOrder" Content="CONFIRM ORDER" HorizontalAlignment="Left" Margin="258,24,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" Width="216"/>
